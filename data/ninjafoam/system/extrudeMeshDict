FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      extrudeProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

constructFrom mesh;
sourceCase "$FOAM_CASE";

sourcePatches (ground);
exposedPatchName bottom;

extrudeModel        linearDirection;

linearDirectionCoeffs
{
    direction       (0 0 -1);
    thickness       150;
}

nLayers 10;
expansionRatio 0.83;

flipNormals false;
mergeFaces false;

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
