//#includeEtc "caseDicts/mesh/generation/snappyHexMeshDict.cfg"

castellatedMesh on;
snap            on;
addLayers       off;

geometry
{
    big_butte_small_displaced.stl
    {
        type triSurfaceMesh;
        name ground;
    }
};

castellatedMeshControls
{
    features
    (
//      { file "ground.eMesh"; level 1; }
    );

    refinementSurfaces
    {
        ground
        {
            level (2 2);
            patchInfo { type wall; }
        }
    }

    refinementRegions
    {
    }

    maxLocalCells 1000000;
    maxGlobalCells 4500000;
    minRefinementCells 10;
    nCellsBetweenLevels 1;
    allowFreeStandingZoneFaces true;
    resolveFeatureAngle 30.0;

    locationInMesh (334000 4.805e+06 2300); // Offset from (0 0 0) to avoid
                                     // coinciding with face or edge
}

snapControls
{
//  explicitFeatureSnap    true;
    implicitFeatureSnap    false;
    nSmoothPatch 4;
    tolerance 2.0;
    nSolveIter 100;
    nRelaxIter 5;
    nFeatureSnapIter 10;
}

addLayersControls
{
    layers
    {
        "ground.*"
        {
            nSurfaceLayers 2;
        }
    }

    relativeSizes       true; // false, usually with firstLayerThickness
    expansionRatio      1.2;
    finalLayerThickness 0.5;
    minThickness        1e-3;
//  firstLayerThickness 0.01;

//  maxThicknessToMedialRatio 0.6;
}

meshQualityControls
{
//    minTetQuality -1e+30;
    maxNonOrtho 70.0;
    maxBoundarySkewness 20.0;// previous 20
    maxInternalSkewness 4.0;//previous 5
    maxConcave 80.0;
    minFlatness 0.5;
    minVol 1e-13;
    minTetQuality 1e-30;
    minArea -1.0;
    minTwist 0.02;
    minDeterminant 0.001;
    minFaceWeight 0.02;
    minVolRatio 0.01;
    minTriangleTwist -1.0;
    nSmoothScale 4;
    errorReduction 0.75;
}

writeFlags
(
    scalarLevels
    layerSets
    layerFields
);

mergeTolerance 1e-6;

